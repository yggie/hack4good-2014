<div class="container-fluid">
  <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pull-left side-container">
    <div class="nav-header">
      <%= image_tag('wkt_logo.png') %>
      <h1>Menu</h1>
    </div>
    <ul class="nav nav-pills nav-stacked side-nav">
      <li><a><i class="fa fa-camera"></i> Specify a area</a>
        <ul class="sub-nav">
          <%= form_for @collection, html: { role: 'form' } do |f| %>
            <div class="form-group">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
            </div>
            <div class="form-group">
              <%= f.label :criteria %>
              <%= f.text_area :criteria, class: 'form-control', placeholder: 'Enter a collection criteria', rows: 5 %>
            </div>
            <div class="form-group">
              <%= f.label :start_date %>
              <%= f.date_field :start_date, class: 'form-control', placeholder: 'Enter start date' %>
            </div>
            <div class="form-group">
              <%= f.label :end_date %>
              <%= f.date_field :end_date, class: 'form-control', placeholder: 'Enter end date' %>
            </div>
            <%= f.hidden_field :latitude %>
            <%= f.hidden_field :longitude %>
            <%= f.hidden_field :radius %>

            <%= f.submit 'Submit', class: 'btn btn-default' %>
          <% end %>
        </ul>
      </li>
      <li><a><i class="fa fa-camera"></i> Submit a Picture</a>
        <ul class="sub-nav">
        <%= form_for @post, html: { role: 'form' } do |f| %>
          <div class="form-group">
            <div class="input-group">
              <%= f.text_field :email, class: 'form-control', placeholder: 'Enter email' %>
            </div>
            <%= f.fields_for :photo, html: { role: 'form' } do |f2| %>
              <%= f2.label :image, 'Select Your Image' %>
              <%= f2.file_field :image %>
              <p class="help-block">Example block-level help text here.</p>
            <% end %>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox"> Accept Agreement
            </label>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-default' %>
        <% end %>
        </ul>
      </li>

      <li><a><i class="fa fa-file-image-o"></i> Gallery</a>
      </li>
      <li><a><i class="fa fa-camera"></i> link 1</a></li>
      <li><a><i class="fa fa-camera"></i> link 1</a></li>
    </ul>
    <div class="mobile-menu"><i class="fa fa-caret-square-o-down"></i></div>
  </ul>

  <a href="#" id="refresh" class="btn btn-default"><i class="fa fa-refresh"></i> Refresh Map</a>
</div>
<div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 pull-right map-container">
  <div id="map_canvas" style="width: 100%; height: 100%"></div>
</div>
</div>


<script src="https://maps.googleapis.com/maps/api/js"></script>
